<%- layout('./main') %>
<div class="row">
  <div class="col-md-4 offset-md-4">
    <div class="card mt-4">
      <div class="card-head text-center mt-4">
        <h1 class="titulos">Registro</h1>
      </div>
      <div class="card-body">
        <form action="/signup" method="post">
          <div class="input-group mb-3">
              <span class="input-group-text" id="inputGroup-sizing-default">Email</span>
              <input type="email" name="email" placeholder="Email" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" required>
            </div>
          <div class="input-group mb-3">
              <span class="input-group-text" id="inputGroup-sizing-default">Contraseña</span>
              <input type="password" name="password" placeholder="Contraseña" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" required>
           </div>
           <div class="text-center">
            <button class="btn btn-lg btn-outline-primary btn-block" type="submit"><i class="fa fa-sign-in"></i> Registrarse</button> 
          </div>
      </form>
      </div>
    </div>
  </div>
</div>